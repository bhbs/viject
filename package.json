{
  "name": "viject",
  "type": "module",
  "version": "1.1.0",
  "description": "A tool for migrating your React app from react-scripts (Create React App) to Vite",
  "author": "bhbs <bhbstar.me@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/bhbs/viject",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhbs/viject.git"
  },
  "bugs": {
    "url": "https://github.com/bhbs/viject/issues"
  },
  "keywords": [
    "vite",
    "vitest",
    "react",
    "create-react-app",
    "react-scripts"
  ],
  "bin": {
    "viject": "bin/viject.js"
  },
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "ci": "rome ci src",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "npm run lint:cspell && npm run lint:rome",
    "lint:rome": "rome ci src",
    "lint:cspell": "cspell --gitignore '**'",
    "ts": "tsc",
    "build": "tsc",
    "test:e2e": "playwright test",
    "test:unit": "vitest run tests",
    "test:integration": "./tests/scripts/exec.sh"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "acorn": "^8.10.0",
    "acorn-jsx": "^5.3.2",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.0",
    "@types/node": "^20.4.9",
    "@vitejs/plugin-react": "^4.0.4",
    "cspell": "^7.0.0",
    "happy-dom": "^10.9.0",
    "rome": "^12.1.3",
    "vite": "^4.4.9",
    "vite-plugin-svgr": "^3.2.0",
    "vite-tsconfig-paths": "^3.5.0",
    "vitepress": "1.0.0-rc.4",
    "vitest": "^0.34.1",
    "vue": "^3.3.4"
  }
}