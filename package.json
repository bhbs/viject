{
  "name": "viject",
  "type": "module",
  "version": "0.1.0",
  "description": "A tool for migrating your React app from react-scripts (Create React App) to Vite",
  "author": "bhbs <bhbstar.me@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/bhbs/viject",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhbs/viject.git"
  },
  "bugs": {
    "url": "https://github.com/bhbs/viject/issues"
  },
  "keywords": [
    "vite",
    "vitest",
    "react",
    "create-react-app",
    "react-scripts"
  ],
  "bin": {
    "viject": "bin/viject.js"
  },
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "ci": "rome ci src",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "npm run lint:cspell; npm run lint:rome",
    "lint:rome": "rome ci src",
    "lint:cspell": "cspell --gitignore '**'",
    "ts": "tsc",
    "build": "tsc",
    "test": "./tests/scripts/exec.sh"
  },
  "dependencies": {
    "@clack/prompts": "^0.6.0",
    "acorn": "^8.8.1",
    "acorn-jsx": "^5.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.31.1",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-react": "^3.0.0",
    "cspell": "^6.17.0",
    "happy-dom": "^8.1.0",
    "rome": "^11.0.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-svgr": "^2.3.0",
    "vite-tsconfig-paths": "^4.0.2",
    "vitepress": "1.0.0-alpha.30",
    "vitest": "^0.25.6",
    "vue": "^3.2.45"
  }
}
